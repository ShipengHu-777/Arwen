- name: reload fate-rollsite
  shell: /bin/bash {{cbase}}/supervisord/service.sh update fate-rollsite
- name: stop fate-rollsite
  shell: /bin/bash {{cbase}}/supervisord/service.sh stop fate-rollsite
- name: start fate-rollsite
  shell: /bin/bash {{cbase}}/supervisord/service.sh start fate-rollsite
